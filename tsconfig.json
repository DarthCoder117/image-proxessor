{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "module": "commonjs",
    "strict": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
